<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sample Application</title>
    <link id="custom-css" rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Sample Application</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Checkout">Checkout</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <a href="#" onclick="setStyleSheet('/lib/bootstrap/dist/css/bootstrap.min.css');" style="margin-right: 5px;"> Padrão </a>
                    <a href="#" onclick="setStyleSheet('/css/bootstrap.simplex.min.css');" style="margin-right: 5px;"> Simplex </a>
                    <a href="#" onclick="setStyleSheet('/css/bootstrap.darkly.min.css');" style="margin-right: 5px;"> Darkly </a>
                    <a href="#" onclick="setStyleSheet('/css/bootstrap.superhero.min.css');" style="margin-right: 5px;"> Superhero </a>
                    <a href="#" onclick="setStyleSheet('/css/bootstrap.solar.min.css');" style="margin-right: 5px;"> Solar </a>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="text-center pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - WebApplication1 - <i>bootswatch.com</i> - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function setStyleSheet(url) {
            var stylesheet = document.getElementById("custom-css");
            stylesheet.setAttribute('href', url);
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
